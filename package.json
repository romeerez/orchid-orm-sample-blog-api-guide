{
  "name": "blog-api",
  "type": "module",
  "scripts": {
    "db": "NODE_ENV=development tsx src/db/dbScript.ts",
    "build:migrations": "rimraf dist/db && node esbuild.migrations.mjs",
    "db:compiled": "NODE_ENV=production node dist/db/dbScript.mjs",
    "lint:fix": "eslint --fix \"**/*.{js,cjs,mjs,ts}\"",
    "prettier:fix": "prettier --write \"**/*.{js,cjs,mjs,ts,json,md}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "orchid-orm": "^1.17.32",
    "orchid-orm-schema-to-zod": "^0.4.34",
    "pqb": "^0.18.31"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.6",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "orchid-orm-test-factory": "^0.3.159",
    "prettier": "^3.1.0",
    "rake-db": "^2.10.68",
    "rimraf": "^5.0.5",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}

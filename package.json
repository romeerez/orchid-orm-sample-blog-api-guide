{
  "name": "blog-api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "test": "vitest",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "db": "tsx src/db/dbScript.ts",
    "db:compiled": "NODE_ENV=production node dist/db/dbScript.mjs",
    "build": "rimraf dist && pnpm \"/^build:.*/\"",
    "build:app": "node esbuild.app.mjs",
    "build:migrations": "node esbuild.migrations.mjs",
    "lint:fix": "eslint --fix \"**/*.{js,cjs,mjs,ts}\"",
    "prettier:fix": "prettier --write \"**/*.{js,cjs,mjs,ts,json,md}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-type-provider-zod": "^1.1.9",
    "jsonwebtoken": "^9.0.2",
    "orchid-orm": "^1.17.38",
    "orchid-orm-schema-to-zod": "^0.4.38",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.6",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "light-my-request": "^5.11.0",
    "lint-staged": "^15.1.0",
    "orchid-orm-test-factory": "^0.3.166",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "rake-db": "^2.10.72",
    "rimraf": "^5.0.5",
    "tsx": "^4.1.4",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  }
}

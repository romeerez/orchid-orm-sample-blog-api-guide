{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Allow global describe and it in tests
    "types": ["vitest/globals"]
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "esbuild.migrations.mjs",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
